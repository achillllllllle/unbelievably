<div class="container">

  <div class="intro pt-3">
    <h1><%= @wonder.title %></h1>
  </div>

  <div id="wonderPhotosCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <% if @wonder.photos.attached? %>
        <% @wonder.photos.each_with_index do |photo, index| %>
          <div class="carousel-item <%= 'active' if index.zero? %>">
            <%= cl_image_tag(photo.key, class: "d-block w-100", alt: "Wonder photo #{index}") %>
          </div>
        <% end %>
      <% else %>
          <%= image_tag('thumbnail.jpeg', class: "d-block w-100", alt: "Default thumbnail") %>
        </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#wonderPhotosCarousel" role="button" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#wonderPhotosCarousel" role="button" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

    <div class="principal-infos d-flex align-items-center justify-content-between pt-2">
      <h2><%= @wonder.category %> - <%= @wonder.location %></h2>
      <div class=" buttons-container d-flex justify-content-end">
        <p class="button">Share</p>
        <p class="button">Save</p>
      </div>
    </div>

  <div class="d-flex">
    <div class="col-md-8">
      <div class="infos-container ml-8">

        <div class="user d-flex align-items-center py-3">
          <div class="avatar-pic">
            <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="avatar-show" />
          </div>
          <div class="user-details">
            <p class="user-name mb-1 pl-1">User : <strong><%= @wonder.user.username %></strong></p>
            <p class="button text-secondary mb-1">Send a message</p>
          </div>
        </div>

        <div class="border" style="border-top-color: rgb(221, 221, 221); border-top-width: 0.5px;"></div>

        <div class="description py-4 d-flex align-items-center">
          <i class="fas fa-pen-to-square details-icon"></i>
          <div class="flex-grow-1">
            <%= @wonder.content %>
          </div>
        </div>

        <div class="border" style="border-top-color: rgb(221, 221, 221); border-top-width: 0.5px;"></div>

        <p class="button mt-3"><%= link_to "Back to all wonders", wonders_path %></p>

      </div>
    </div>

    <div class="col-md-4">
      <div class="booking-container p-4">

        <div class="price d-flex align-items-center">
          <i class="fa-solid fa-tag details-icon"></i>
            <p class="mb-0"><strong><%= @wonder.price_per_day %>€</strong> per day</p>
        </div>

        <p class="mt-3"><I>Insert calendar</I></p>

        <div class="book-btn py-4">
          <p class="button">✨ Book this wonder ✨</p>
        </div>

      </div>
    </div>

  </div>
</div>



