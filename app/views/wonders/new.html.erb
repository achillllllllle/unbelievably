<div class="container mt-3">
  <%= simple_form_for @wonder, html: { class: 'form-horizontal' } do |f| %>

    <div class="row form-group">
      <div class="col-md-10 offset-md-1">
        <div class="input-group mb-2">
          <div class="input-group-prepend p-2">
            <i class="fa fa-tag"></i>
          </div>
          <%= f.input :title, label: false, placeholder: 'Title', input_html: { class: 'form-control' }, wrapper: false %>
        </div>
      </div>
    </div>

    <div class="row form-group">
      <div class="col-md-10 offset-md-1">
        <div class="input-group mb-2">
          <div class="input-group-prepend p-2">
            <i class="fa fa-dollar-sign"></i>
          </div>
          <%= f.input :price_per_day, label: false, placeholder: 'Price / Day', as: :float, input_html: { class: 'form-control' }, wrapper: false %>
        </div>
      </div>
    </div>

    <div class="row form-group">
      <div class="col-md-10 offset-md-1">
        <div class="input-group mb-2">
          <div class="input-group-prepend p-2">
            <i class="fa fa-cogs"></i>
          </div>
          <%= f.input :category, label: false, placeholder: 'Category', input_html: { class: 'form-control' }, wrapper: false %>
        </div>
      </div>
    </div>

    <div class="row form-group">
      <div class="col-md-10 offset-md-1">
        <div class="input-group mb-2">
          <div class="input-group-prepend p-2">
            <i class="fa fa-map-marker-alt"></i>
          </div>
          <%= f.input :location, label: false, placeholder: 'Location', input_html: { class: 'form-control' }, wrapper: false %>
        </div>
      </div>
    </div>

    <div class="row form-group">
      <div class="col-md-10 offset-md-1">
        <div class="input-group mb-2">
          <div class="input-group-prepend p-2">
            <i class="fa fa-align-left"></i>
          </div>
          <%= f.input :content, label: false, placeholder: 'Details', as: :text, input_html: { class: 'form-control', rows: 4 }, wrapper: false %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-10 offset-md-1">
        <%= f.button :submit, "Send live", class: "btn btn-primary btn-lg btn-block mt-2" %>
      </div>
    </div>

  <% end %>
</div>
